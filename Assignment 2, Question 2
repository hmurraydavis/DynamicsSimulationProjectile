t2=(dtt^2)*c*cos(tt); %x10^-15
t3=(dtt^2)*c*sin(tt); %-9.7906
t4=(dtt^2)*c*sin(tt); %-9.7906
t5=(b-b*cos(tt))*ddtt; %0
t6=(b-c*cos(tt))*(dtt^2); %38.4784

arh=t1+t2-t6
ath=t3+t4+t5;

