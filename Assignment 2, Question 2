b=1; %m
c=.248; %m
theta=135; %degrees
dthetadt=360;%degrees/sec
ddthetaddt=0;
%acceleration in r hat:1.1
%acceleration in theta: 7.4

tt=135*2*pi/180; dtt=1*2*pi; ddtt=0;

t1=ddtt*c*sin(tt);
t2=(dtt^2)*c*cos(tt);
t3=(dtt^2)*c*sin(tt); 
t4=(dtt^2)*c*sin(tt);
t5=(b-b*cos(tt))*ddtt;
t6=(b-c*cos(tt))*(dtt^2);

arh=t1+t2-t3
ath=t3+t4+t5

% arh=((dtt^2)*c*cos(tt))-((b-(c*cos(tt)))*(dtt^2))
% ath=((dtt^2)*c*sin(tt))+((dtt^2)*c*sin(tt))
